import java.util.*;
class sum
{
	public static void main(String args[])
	{
		Scanner sc=new Scanner(System.in);
		System.out.println("Enter the number:");
		int num=sc.nextInt();
		int sum=0,rem;
		for(; num>0;num=num/10)
		{
			rem=num%10;
			sum=sum+rem;
		}
		System.out.print("Sum of numbers is:"+sum);
	}
}
OUTPUT:
Enter the number:
123
Sum of numbers is:6
